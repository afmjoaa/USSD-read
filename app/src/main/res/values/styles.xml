<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mColorPrimary</item>
        <item name="colorPrimaryDark">#212121</item>
        <item name="colorPrimaryVariant">@color/mColorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/mColorOnPrimary</item>
        <item name="colorSecondary">@color/mColorSecondary</item>
        <item name="colorSecondaryVariant">@color/mColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/mColorOnSecondary</item>
        <item name="colorError">@color/mColorError</item>
        <item name="colorOnError">@color/mColorOnError</item>
        <item name="colorSurface">@color/mColorSurface</item>
        <item name="colorOnSurface">@color/mColorOnSurface</item>
        <item name="android:colorBackground">@color/mColorBackground</item>
        <item name="colorOnBackground">@color/mColorOnBackground</item>
        <item name="colorAccent">@color/secondaryLight</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/AppShapeAppearance.MediumComponent</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="AppShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">#212121</item>
    </style>

    <style name="MyTextApprncExp" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#f7f7f7</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
